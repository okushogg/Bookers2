<!--コメント一覧-->
<% book.book_comments.each do |book_comment| %>
  <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', size:"50x50", fallback: "no_image.jpg" %>
  <%= book_comment.user.name %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
      <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class:'btn btn-sm btn-danger' %><br>
  <% end %>
<% end %>

