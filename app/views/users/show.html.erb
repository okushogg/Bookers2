<%= flash[:notice] %>
<%= render 'layouts/error_messages_users', user:@user %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h1>My Books</h1>
      <table border="1" cellspacing="10" cellpadding="5" width="500">
      <thead>
        <tr>
        <th>User</th>
        <th>Title</th>    
        <th>Opinion</th>
        </tr>
      </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size:"50x50", fallback: "no_image.jpg" %></td>
          <td><%= link_to "#{book.title}", book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>