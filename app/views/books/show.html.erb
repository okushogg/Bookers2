<%= flash[:notice] %>
<%= render 'layouts/error_messages', book: @book %>

<div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'books/list', book: @book, user: @user %>
      <div class="col-md-9">
        <h1>Book detail</h1>
        <table class="table">
        <tbody>
            <tr>
              <td><%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size:"50x50", fallback: "no_image.jpg" %><br>
                <%= @user.name %></td>
              <% end %>
              <td><%= @book_detail.title %></td>
              <td><%= @book_detail.body %></td>
              <!--コメントの件数-->
              <td>コメント件数：<%= @book_detail.book_comments.count %></td>
              
              <!--いいね！の表示-->
              <%=  render 'favorites/favorite-btn', book: @book_detail %> 
              
              <% if @user.id == current_user.id %>
                <td><%= link_to 'Edit', edit_book_path, class:'btn btn-sm btn-success'%></td>
                <td><%= link_to 'Destroy',book_path(@book_detail.id), method: :delete, "data-confirm" => "Are you sure?", class:'btn btn-sm btn-danger' %></td>
              <% else %>
              <% end %>
            </tr>
        </tbody>
        </table>
        
        <div class="comments-index">
        <!--コメントしたuserの画像と名前とコメント内容-->
          <% @book_detail.book_comments.each do |book_comment| %>
            <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', size:"50x50", fallback: "no_image.jpg" %>
            <%= book_comment.user.name %>
            <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:'btn btn-sm btn-danger' %><br>
            <% end %>
          <% end %>
        </div>
        
        <div class="container px-5 px-sm-0">
          <%= form_with(model:[@book_detail, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment,size: '80x10', rows:'5',placeholder: "コメントをここに" %><br>
          <%= f.submit " 送信 " %>
          <% end %>
        </div>
      </div>
    </div>
</div>

