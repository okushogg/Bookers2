<%= render 'layouts/error_messages', book:@book %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %><br>
      <%= f.submit 'Update Book', {class:"btn btn-success"} %>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %> |
      <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>