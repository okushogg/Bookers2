<div class="col-md-3">
    <h1>User info</h1><br>
    <table class="table">
      <tbody>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size:"100x100", fallback: "no_image.jpg" %></td>
        </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    
    <div class="row text-center">
      <%= link_to  ' ' ,edit_user_path(user), class: 'mdbtn btn-outline-secondary btn-block fas fa-user-cog' %>
    </div>
  
  
      <h2 class="mt-3">New book</h2>
      <%= form_with model:book , local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %> </br>
      
         <%= f.submit 'Create Book', {class:"btn btn-success"} %>
      <% end %>

    
</div>